<%= render :partial => "navbar", :locals => { :active => :index } %>

<% provide(:title, 'All users') %>		

<table class="table table-bordered table-striped">
<thead>
  <tr>
  	
    <th><%= t("users.title") %></th>
    <th><%= t("users.email") %></th>
    <th class="span2">Último Acesso</th>
    <th class="span1">Administrador</th>
    <th class="span1">Ações</th>
  </tr>
</thead>
<tbody>
	<% @users.each do |c| %>
	<tr>
	    <td><%= gravatar_for c %><%= link_to c.name, user_path(c)  %></td>
	    <td><%= c.email %></td>
	    <td><%= c.last_sign_in_at %></td>
	    <td>
	    	<span class="label <%= c.admin == true ? 'label-success' : 'label-important'%>" >
	    		<%= c.admin == true ? "Sim" : "Não"%>
	    	</span>
	    </td>
	    <td><%= index_btn_edit edit_user_path(c), "Exibir Usuário" %></td>
	</tr>  
	<% end %>
</table>
</tbody>

<%= will_paginate %>