<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>

	<% if current_user.admin? %>
	  <%= link_to t("abilities.link", skilled: @user.name), user_abilities_path(@user), class: "btn btn-primary"  %>
	<% end %>
    </section>
    <div class='row-fluid'>
      <div class='span12'>
        <% if can?( :update, @user) %>
        <%= index_btn_edit edit_user_path(@user) %>
        <% end %>
      </div>
    </div>
  </aside>

	<div class="span8">
	<% if @user.microposts.any? %>
	  <h3>Microposts (<%= @user.microposts.count %>)</h3>
	  <ol class="microposts">
	    <%= render @microposts %>
	  </ol>
	  <%= will_paginate @microposts %>
	<% end %>
	</div>

</div>