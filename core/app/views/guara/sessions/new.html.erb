<% provide(:title, t("sign.in.title")) %>
<h1><%= t("sign.in.title") %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit t("sign.in.link"), class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>
