<div>
	<a href="<%= user_path(current_user) %>">
	  <%= gravatar_for current_user, size: 52 %>
	</a>
	<h1>
	  <%= current_user.name %>
	</h1>
	<span>
	  <%= link_to t("users.profile.link"), current_user %>
	</span>
	<span>
	  <%= pluralize(current_user.microposts.count, t("microposts.title")) %>
	</span>
</div>