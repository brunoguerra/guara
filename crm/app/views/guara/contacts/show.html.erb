<% if @json %>
<%= render :partial => "header" %>
<% end %>
<section class="show"

<%= render :partial => "header" %>

<ul class="thumbnails">
  <li class="span12">
    <div class="thumbnail">
      <div class="caption">
		<legend><%= t("contacts.show.title") %></legend>
	  </div>
	  <div class="container">
		<div>

		  <div class="span4 box-gray-data">
            <%= show_label_tag t('contacts.name') %>
			<%= @contact.name %>
          </div>

          <div class="span4 box-gray-data">
	        <%= show_label_tag t('contacts.emails') %>
			<%= concat_emails(@contact.emails) %>
	      </div>

	      <div class="span3 box-gray-data">
            <%= show_label_tag t('contacts.birthday') %>
			<%= @contact.birthday %>
          </div>

		  <div class="span4 box-gray-data">
            <%= show_label_tag t('contacts.department') %>
			<%= name_or_empty @contact.department %>
          </div>

		  <div class="span4 box-gray-data">
            <%= show_label_tag t('contacts.business_function') %>
			<%= @contact.business_function %>
          </div>

		  <div class="span4 box-gray-data">
            <%= show_label_tag t('contacts.phone') %>
			<%= @contact.phone %>
          </div>

		  <div class="span4 box-gray-data">
            <%= show_label_tag t('contacts.cell') %>
			<%= @contact.cell %>
          </div>

		  

		</div>
	</div>
  </li>
</ul>

<% if @json then @new_target = { target: 'new' } end %>

<%= link_to t('helpers.forms.edit'), edit_customer_contact_path(@contact.customer, @contact), @new_target %> |

<%= link_to_function t('helpers.forms.back'), "history.back()"%>

</section>
