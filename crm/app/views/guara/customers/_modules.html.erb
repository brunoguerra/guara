
<h1 class="modules"><%= @customer.name %></h1>
<legend><small><%= @customer.name_sec || t("customers.show.title") %></small></legend>

<ul class="nav nav-tabs">
	
  <li <%= 'class=active' if active == :general %> ><%= link_to t("customers.general"), customer_path(@customer) %></li>

	<% if can? :edit, Guara::Customer %>
  <li <%= 'class=active' if active == :edit %> ><%= link_to t("customers.edit.link"), edit_customer_path(@customer) %></li>
	<% end  %>
	<% if can? :read, Guara::Contact %>
  <li <%= 'class=active' if active == :contacts %> ><%= link_to t("contacts.index.link"), customer_contacts_path(@customer) %></li>
	<% end  %>
	<% if can? :read, Guara::Task %>
  <li <%= 'class=active' if active == :tasks %> ><%= link_to t("tasks.index.link"), customer_tasks_path(@customer) %></li>
	<% end  %>
	<% if can? :read, Guara::CustomerFinancial %>
  <li <%= 'class=active' if active == :financial %> ><a href="#">Dados de Cobran&ccedil;a</a></li>
	<% end  %>
	
	<% if @customer_type == "pj" %>
  	<li <%= 'class=active' if active == :customer_association %> ><%= link_to t("customer_association.index.link"), customer_association_customer_path(@customer) %></li>
  	<% end %>


  <%= customer_nav_modules_build_tabs(@customer, active) %>
  

</ul>