<% provide(:title, t("products.index.title")) %>
<%= render :partial => "header" %>

<section class="show">

<ul class="thumbnails">
  <li class="span9">
    <div class="thumbnail">
      <div class="caption">
		<legend><%= t('products.show.title') %></legend>
		<div class="row">
			<div class="span4">

			  <div class="control-group">
	            <%= show_label_tag t('sku') %>
				<%= @product.sku %>
	          </div>

	          <div class="control-group">
	            <%= show_label_tag t('name') %>
				<%= @product.name %>
	          </div>

	          <div class="control-group">
	            <%= show_label_tag t('description') %>
				<%= @product.description %>
	          </div>

	          <div class="control-group">
	            <%= show_label_tag t('available_on') %>
				<%= @product.available_on != nil ? @product.available_on.strftime("%d/%m/%Y") : @product.available_on %>
	          </div>

	          <div class="control-group">
	            <%= show_label_tag t('price') %>
				<%= number_to_currency(@product.price, :locale => :br) %>
	          </div>

	          
			</div>

			<div class="span4">
			  <div class="control-group">
	            <%= show_label_tag t('stock_total') %>
				<%= @product.stock %>
	          </div>

	          <div class="control-group">
	            <%= show_label_tag t('weight') %>
				<%= @product.weight %>
	          </div>

	          <div class="control-group">
	            <%= show_label_tag t('height') %>
				<%= @product.height %>
	          </div>

	          <div class="control-group">
	            <%= show_label_tag t('width') %>
				<%= @product.width %>
	          </div>

	          <div class="control-group">
	            <%= show_label_tag t('depth') %>
				<%= @product.depth %>
	          </div>          
			</div>

		  </div>
	  </div>
	</div>
  </li>

  <li class="span3">
  	<div class="thumbnail">
  		<div class="caption">
  			<legend><%= t('categories') %></legend>
  			<% @product.categories.each do |f| %>
  				<div class="control-group"><%=f.name%></div>	
  			<% end %>
  		</div>	
  	</div>
  </li>
</ul>
</section>
<%= link_to t('helpers.forms.edit'), edit_product_path(@product.id), :class => "btn" %>
<%= link_to t('helpers.forms.back'), products_path, :class => "btn" %>
