<%= semantic_form_for @supplier, :url => supplier_index_path(), :method => @supplier.new_record? ? :post : :put do |f| %>
	
	<fieldset>
		<legend><%= @supplier.new_record? ? t("supplier.title") : t("supplier.edit.title") %></legend>

		   <%= f.input :person_id, :label => t("orders.supplier.title"), :as => :select, :collection => Guara::Person.all %>

		 <%= f.submit :class => "btn btn-primary" %>  

	</fieldset>

<% end %>