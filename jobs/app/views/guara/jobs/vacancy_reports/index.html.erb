<section id="vacancy">

  <div>
    <navbar>
      <%= render :partial => "guara/jobs/jobs/navbar", :locals => { active: :vacancy } %>
    </navbar>
    
    <div>
      <div class="row-fluid">
        <ul class="thumbnails">
          <li class="span8">
            <div class="thumbnail">
              <div class="caption">
                <div class="page-header">
                  <%=t('jobs.process_instance.processes_starteds')%>
                </div>

                <table class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th><%= t("jobs.vacancy_reports.customer_pj") %></th>
                      <th><%= t("jobs.vacancy_reports.role") %></th>
                      <th><%= t("jobs.vacancy_reports.total") %></th>
                      <th><%= t("jobs.vacancy_reports.status") %></th>
                      <th><%= t("jobs.vacancy_reports.consultant") %></th>
                      <th class="span1"><%= t("helpers.forms.actions") %></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @vacancy.each do |v|  %>
                      <tr>
                        <td><%= v.customer_pj.name if !v.customer_pj.nil? %></td>
                        <td><%= v.role.name if !v.role.nil? %></td>
                        <td><%= v.total %></td>
                        <td><%= Guara::Jobs::VacancyStatus.status_translation[v.status_id] %></td>
                        <td><%= v.consultant.name if !v.consultant.nil? %></td>
                        <td></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
   

              </div>
            </div>
          </li>

          <li class="span4">
            <div class="thumbnail">
              <div class="caption">
                <%= render :partial => 'form_search' %>

                <%= link_to raw('<i  class="icon-list"></i> Gerar PDF'), 
                  nit_generator_path(@vacancy_reports, :pdf), :class => "btn", :title=>"Gerar PDF" %>
              </div>
            </div>
          </li>

        </ul>
      </div>  
    </div>
    
  </div>
  
</div>