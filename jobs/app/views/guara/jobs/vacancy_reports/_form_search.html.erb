<div class="page-header"><%= t("jobs.process_instance.filters") %></div>

<%= semantic_form_for :search, :html => { :class => "well form-search", :method => :get } do |f| %>
		
		    <div class="control-group">
				<%= label_tag :finished_is_true, t("jobs.process_instance.status.title"), :class => "control-label" %>
				<div class="controls">
					<%= f.select :finished_is_true, options_for_select([["Aberto", 0], ["Fechado", 1]], params[:search][:finished_is_true]) %>
				</div>
			</div>

      		<div class="control-group">
		        <%= label_tag "state_eq", t('jobs.process_instance.step'), :class => "control-label" %>
		        <div class="controls">
		          <%= f.select "state_eq", 
		          Guara::Jobs::Step.where(:custom_process_id => Guara::Jobs::Vacancy.custom_process_id).map{ |c| [c.name, c.id] }, {:include_blank => true} %>
		        </div>
		    </div>

		    <div class="control-group">
		    	<%= label_tag "role_equals", t('jobs.professional.role'), :class => "control-label" %>
		    	<div class="controls">
		    		<%= select_tag "vacancy_role_id_equals", options_from_collection_for_select(
		    		Guara::Jobs::Role.all, :id, :name), { :include_blank => true }  %>
		    	</div>
			</div>
		        
      		<div class="control-group">
		        <%= label_tag "date_start_gteq", t('jobs.process_instance.date'), :class => "control-label" %>
		        <div class="controls">
		          <%= f.text_field "date_start_gteq", :class=>"input-small date_format" %> Ã  
		          <%= f.text_field "date_finish_lteq", :class=>"input-small date_format" %>
		        </div>
		    </div>

		<%= submit_tag "Buscar", :class => "btn btn-primary" %>
		<div style="clear:both;"></div>
<% end %>