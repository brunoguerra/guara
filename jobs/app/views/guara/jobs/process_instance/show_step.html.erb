<navbar>
			<%= render :partial => "guara/jobs/jobs/navbar", 
      :locals => { active: :announcement_of_vacancies } %>
		</navbar>
		
<section class="show">
	<div class="">
		<ul class="thumbnails">
			<li class="span12">
			    <div class="thumbnail">
			    	<h2><%=@process_instance.custom_process.step.name %></h2>
					<%= render :partial => 'details_initial_stage', :locals=> {:grouped_column_attrs_step_init=> @grouped_column_attrs_step_init } %>
				</div>
			</li>

	  		<li class="span12">
			    <div class="thumbnail">
			    	<h2><%=@current_step.name%></h2>
			    	<div class="row-fluid">
						<div class="span12">
							<% @grouped_column_attrs_current_step.each do |group, column_attrs| 
								group = 'default' if group.nil?
							%>
							<fieldset>
								<legend><%= t("jobs.process_instance.attrs_group.#{group}") %></legend>
								<% column_attrs.each do |column, attrs| %>
									<% attrs.each do |step_attr| %>
										<div class="control-group">
											<% if step_attr.options == 'component'  
												@component = eval(step_attr.widget).new()
							                    params[:process_instance_id] = params[:id]
							                    @component.request = request
							                    @component.response = response
							                    @component.params = params 
							                    %>
												<%= @component.show.join("").html_safe %>
							                    <%
											 else %>
												<%= show_span_tag step_attr.title %>
												<%= show_attr_value(@process_instance, step_attr) %>
											<% end %>
										</div>
									<% end %>
								<% end %>
							</fieldset>

							<% end %>

							
						</div>
					</div>

					<%= link_to 'Voltar', process_instance_path(@process_instance), :class=> "btn" %> 
					<%= link_to 'Editar Etapa', edit_process_instance_path(:id=> @process_instance.id, :edit_step=> @current_step.id), :class=> "btn" %> 
					<%= link_to 'PrÃ³xima Etapa', edit_process_instance_path(@process_instance.id), :class=> "btn" if @process_instance.state != @current_step.id %> 
				</div>
			</li>
		</ul>
	</div>	
</section>