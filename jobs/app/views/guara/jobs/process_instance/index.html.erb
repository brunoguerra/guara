<section id="jobs">

	<div>
		<navbar>
			<%= render :partial => "guara/jobs/jobs/navbar", 
      :locals => { active: :announcement_of_vacancies } %>
		</navbar>
		
		<div>
			<div class="row-fluid">
        <ul class="thumbnails">
          <li class="span8">
            <div class="thumbnail">
              <div class="caption">
                <div class="page-header">
                  <%=t('jobs.process_instance.processes_starteds')%>
                </div>

                <table class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th><%= t("jobs.process_instance.id") %></th>
                      <th><%= t("jobs.process_instance.date_start") %></th>
                      <th><%= t("jobs.process_instance.date_finish") %></th>
                      <th><%= t("jobs.process_instance.step") %></th>
                      <th><%= t("helpers.forms.actions") %></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @process_instance.each do |p| %>
                      <tr class="<%= p.custom_process.enabled == false ? 'warning' : '' %>">
                        <td><%= link_to p.id, process_instance_path(p) %></td>
                        <td><%= p.date_start.strftime("%d/%m/%Y")  %></td>
                        <td><%= !p.date_finish.nil? ? p.date_start.strftime("%d/%m/%Y") : ''  %></td>
                        <td><%= p.step.name  %></td>
                        <td>
                          <%= link_to t("helpers.forms.show"), process_instance_path(p), :class => "btn" %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                <%= will_paginate %>
                <%= link_to t('helpers.forms.new'), new_process_instance_path(:process_id=>@process_instance.first.process_id), :class => "btn" %>

              </div>
            </div>
          </li>

          <li class="span4">
            <div class="thumbnail">
              <div class="caption">
                <%= render :partial => 'form_search' %>
              </div>
            </div>
          </li>

        </ul>
      </div>	
		</div>
		
	</div>
  
</div>