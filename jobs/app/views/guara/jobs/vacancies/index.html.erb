
      <section id="jobs">
  <div>
    <navbar>
      <%= render :partial => "guara/jobs/jobs/navbar", :locals => { active: :vacancy_reports } %>
    </navbar>

    <div>
      <div class="row-fluid">
        <ul class="thumbnails">
          <li class="span8">
            <div class="thumbnail">
              <div class="caption">
                <div class="page-header">
                  <%=t('jobs.process_instance.processes_starteds')%>
                </div>

                <table class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th><%= t("jobs.vacancies.customer_pj") %></th>
                      <th><%= t("jobs.vacancies.role") %></th>
                      <th><%= t("jobs.vacancies.total") %></th>
                      <th><%= t("jobs.vacancies.status") %></th>
                      <th><%= t("jobs.vacancies.consultant") %></th>
                      <th class="span1"><%= t("helpers.forms.actions") %></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @vacancy.each do |v|  %>
                      <tr>
                        <td><%= v.customer_pj.name if !v.customer_pj.nil? %></td>
                        <td><%= v.role.name if !v.role.nil? %></td>
                        <td><%= v.total %></td>
                        <td><%= Guara::Jobs::VacancyStatus.status_translation[v.status_id] %></td>
                        <td><%= v.consultant.name if !v.consultant.nil? %></td>
                        <td></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                 <%= will_paginate @vacancy %>

              </div>
            </div>
          </li>

          <li class="span4">
            <div class="thumbnail">
              <div class="caption">
                <%= render :partial => 'form_search', locals: {url_search: vacancies_path } %>
                <% params[:format] = :pdf %>
                <%= link_to raw('<i  class="icon-list"></i> Gerar RelatÃ³rio'), 
                  vacancies_path(params), 
                  :class => "btn", 
                  :title=> t("jobs.vacancies.vacancy_reports"), 
                  :target => "_blank" 
                %>
              </div>
            </div>
          </li>

        </ul>
      </div>  
    </div>
    
  </div>
