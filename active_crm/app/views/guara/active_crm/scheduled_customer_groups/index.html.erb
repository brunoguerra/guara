<section id="active_crm">
    <%= render :partial => 'guara/active_crm/scheduleds/navbar', locals: {active: :false} %>

    <div>
        <div class="row-fluid">
            <ul class="thumbnails">

              <li class="span12">
                <div class="thumbnail">
                  <div class="caption">
                    <%= render :partial => 'form_search' %>
                  </div>
                </div>
                
                <div class="thumbnail" style="margin-top:10px;">
                  <div class="caption">
                    <div class="page-header"><%= t("active_crm.scheduled.customers_to_register") %></div>
                    <table class="table table-bordered table-striped">
                      <thead>
                        <tr>
                          <th class="span2"><%= t("customers.code") %></th>
                          <th><%= t("helpers.label.customers.search.names") %></th>
                          <th class="span3"><%= t("active_crm.scheduled.responsible") %></th>
                        </tr>
                      </thead>

                      <tbody>
                        
                        <% (@customers_to_register).each do |customer| %>
                          <tr>
                            <td><%= customer.id  %></td>
                            <td><%= customer.name %></td>
                            <td> </td>
                          </tr>
                        <% end %>

                      </tbody>
                    </table>

                    <%= will_paginate(@customers_to_register) %>
                  </div>
                </div>

              </li>

            </ul>
        </div>    
    </div>
</section>

