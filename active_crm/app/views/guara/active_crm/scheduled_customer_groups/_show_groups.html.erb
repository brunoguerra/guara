<style>
  caption h3, thead tr h4{
    text-align: center;
  }
</style>
<section id="active_crm">
  
  <h3><%= t("active_crm.scheduled_customer_groups.title") +" "+ "#{@scheduled_customer_groups.id if !@scheduled_customer_groups.nil? }"  %></h3>
  <div class="row-fluid">
    <div class="thumbnail span12">
      <div class="caption">     
        <caption><h3>Filtros</h3></caption>
            <% 
            i = 0
            @customer_groups.each do |group| 
                i += 1
              %>
              <table class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th><h4>Grupo de Cliente <%=i%></h4></th>
                  </tr>
                </thead>
                <tbody>
                  <%= render :partial => 'guara/active_crm/scheduled_customer_groups/tr_group_customer', locals: {group: group, i: i} %>
                  <tr>
                    <td style="background-color:#FFF;">
                      <div class="well">
                        <h4>Resumo</h4>
                        <div><span>Total de Clientes:</span> <%= group.count_customers() %></div>
                        <div><span>Total de Inscritos:</span> <%= group.count_registered() %></div>
                        <div><span>Total de Agendados:</span> <%= group.count_scheduled() %></div>
                      </div>
                      <div>
                        <%= link_to t('active_crm.scheduled.edit_group_customer'), 
                        edit_scheduled_scheduled_customer_group_path(params[:id], group.id), class: 'btn' %>
                        <%= link_to t('active_crm.scheduled.contact_customers'), 
                        scheduled_scheduled_customer_group_scheduled_contacts_path(params[:id], group.id), class: 'btn' %>
                      </div>
                    </td>
                  </tr>
                </tbody>
              </table> 
            <% end %>
          
      </div>
    </div>
  </div>
</section>