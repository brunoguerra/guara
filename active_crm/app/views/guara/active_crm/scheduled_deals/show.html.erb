<%= render :template=> 'guara/active_crm/scheduleds/show' %>

<section id="active_crm_2">
  
  <h3><%= t("active_crm.call_historic")  %></h3>
  <div class="row-fluid">
    <div class="thumbnail span12">
      <div class="caption">     
            
              <table class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th colspan="4">
                      <%= t("helpers.label.customers.search.names") %>: 
                      <%= @scheduled_deal.customer_pj.name %>
                    </th>
                  </tr>
                  <tr>
                    <th><%= t("active_crm.responsible") %></th>
                    <th><%= t("active_crm.next_contact") %></th>
                    <th><%= t("active_crm.activity") %></th>
                    <th><%= t("active_crm.status") %></th>
                  </tr>
                </thead>
                <tbody>
                  <% @scheduled_deal.contacts.where(:enabled=> true).each do |scheduled_contact| %>
                    <tr>
                      <td><%= scheduled_contact.contact.name %></td>
                      <td><%= scheduled_contact.scheduled %></td>
                      <td><%= scheduled_contact.activity %></td>
                      <td><%= prepare_span_status(scheduled_contact).html_safe %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table> 
          
      </div>
    </div>
  </div>
</section>