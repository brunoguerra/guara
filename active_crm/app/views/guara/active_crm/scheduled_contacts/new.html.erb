<section id="scheduled_contact_form_list" class="nested">
	<h6><%= t("scheduleds.historic_scheduled_contact_selected") %></h6>
	<%= render :partial => 'guara/active_crm/scheduled_deals/interactions_list', :locals => { deal: @deal, interactions: Guara::ActiveCrm::Scheduled::Contact.where(deal_id: @deal.id, contact_id: @contact.id) } %>
		
</section>

<ul class="thumbnails">
  <li class="span4">
  	<div class="thumbnail" style="min-height: 420px;">
			<%= render :partial => "show_contact" %>
		</div>
	</li>

	<li class="span8">
		<div>
			<%= render :partial => "form" %>
		</div>
	</li>
</ul>
</section>
<script>
$('#active_crm_scheduled_contact_activity').delay(300).queue(function(next) {
	$('html, body').animate({
       scrollTop: $('#scheduled_contact_form_list').offset().top - 100,
   }, 600);
	$('#active_crm_scheduled_contact_activity').focus();
	if (next) next();
});
</script>