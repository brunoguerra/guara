<section class="nested">
			<h6><%= t("scheduleds.historic_scheduled_contact_selected") %></h6>

			<table class="table table-bordered table-striped">
	          <thead>
	            <tr>
	              <th><%= t("scheduleds.datetime") %></th>
	              <th><%= t("scheduleds.result") %></th>
	              <th><%= t("scheduleds.activity") %></th>
	            </tr>
	          </thead>

	          <tbody>
	            <% if !@deal.nil?
	            (Guara::ActiveCrm::Scheduled::Contact.where(deal_id: @deal.id, contact_id: @contact.id) || []).each do |scheduled_contact|%>
	                <tr>
	                  <td><%= scheduled_contact.scheduled_at %></td>
	                  <td><%= translate_scheduled_contact_result(scheduled_contact.result) %></td>
	                  <td><%= scheduled_contact.activity %></td>
	                </tr>
	            <% end 
	            end %>

	          </tbody>
	        </table>
</section>

<ul class="thumbnails">
  <li class="span4">
  	<div class="thumbnail" style="min-height: 270px;">
			<%= render :partial => "show_contact.html" %>
		</div>
	</li>

	<li class="span8">
		<div>
			<%= render :partial => "form.html" %>
		</div>
	</li>
</ul>
</section>