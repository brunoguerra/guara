<style type="text/css">
	.custom-span3-medium{
		width: 270px;
	}
	.custom-span3-big{
		width: 280px;
	}
	.custom-span7-medium{
		width: 572px;	
	}
	#dialog-call .thumbnails{
		margin-left: 0px;
	}
</style>

<ul class="thumbnails spans">
	<li class="span12">
		<div class="thumbnail">
			<div class="page-header"><%= t("active_crm.scheduled.historic_scheduled_contact_selected") %></div>

			<table class="table table-bordered table-striped">
	          <thead>
	            <tr>
	              <th><%= t("active_crm.scheduled.datetime") %></th>
	              <th><%= t("active_crm.scheduled.activity") %></th>
	            </tr>
	          </thead>

	          <tbody>
	            <% if !@deal.nil?
	            (Guara::ActiveCrm::Scheduled::Contact.where(deal_id: @deal.id, contact_id: @contact.id) || []).each do |scheduled_contact|%>
	                <tr>
	                  <td><%= scheduled_contact.scheduled %></td>
	                  <td><%= scheduled_contact.activity %></td>
	                </tr>
	            <% end 
	            end %>

	          </tbody>
	        </table>
		</div>
	</li>

  <li class="span4">
  		<div class="thumbnail">
			<%= render :partial => "show_contact.html" %>
		</div>
	</li>

	<li class="span8">
		<div class="thumbnail">
			<%= render :partial => "form.html" %>
		</div>
	</li>
</ul>