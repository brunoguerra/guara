<style type="text/css">
  #customer-to-register tr{
    cursor: pointer;
  }
  #customer-to-register tr:hover{
    background-color: #fff;
  }

</style>
<section id="active_crm">
    <navbar></navbar>

    <div>
        <div class="row-fluid">
            <ul class="thumbnails">

              <li class="span12">
                <div class="thumbnail">
                  <div class="caption">
                    
                    <div class="thumbnail" style="margin-top:10px;">
                  <div class="caption">
                    <div class="page-header"><%= t("active_crm.customers_to_register") %></div>
                    <table id="customer-to-register" class="table table-bordered table-striped table-hover">
                      <thead>
                        <tr>
                          <th class="span2"><%= t("customers.code") %></th>
                          <th><%= t("helpers.label.customers.search.names") %></th>
                          <th class="span3"><%= t("active_crm.responsible") %></th>
                        </tr>
                      </thead>

                      <tbody>
                        
                        <% (@customers_to_register).each do |customer| %>
                          <tr>
                            <td><%= customer.id  %></td>
                            <td><%= customer.name %></td>
                            <td> </td>
                          </tr>
                        <% end %>

                      </tbody>
                    </table>

                    <%= will_paginate(@customers_to_register) %>
                  </div>
                </div>

                <div class="thumbnail" style="margin-top:10px;">
                  <div class="caption">
                    <div class="page-header"><%= t("active_crm.customers_scheduled") %></div>
                    <table class="table table-bordered table-striped">
                      <thead>
                        <tr>
                          <th><%= t("helpers.label.customers.search.names") %></th>
                          <th class="span3"><%= t("active_crm.responsible") %></th>
                          <th class="span3"><%= t("active_crm.datetime") %></th>
                        </tr>
                      </thead>

                      <tbody>
                        
                        <% (@customers_scheduled || []).each do |customer| 
                          customer.load_scheduled_contacts().each do |scheduled_contact|
                          %>
                          <tr>
                            <td><%= customer.name %></td>
                            <td><%= scheduled_contact.contact.name %></td>
                            <td><%= scheduled_contact.scheduled %></td>
                          </tr>
                        <% end
                        end %>

                      </tbody>
                    </table>
                  </div>
                </div>

                  </div>
                </div>

            </li>
          </ul>
        </div>
    </div>
</section>


<script type="text/javascript">
  $('#customer-to-register tr').click(function(){
    
  });
</script>