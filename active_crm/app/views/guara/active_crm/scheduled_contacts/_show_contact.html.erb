<div class="control-group">
	<%= show_label_tag t('contacts.name') %>
	<%= @contact.name %>
</div>

<div class="control-group">
    <%= show_label_tag t('contacts.department') +'/'+ t('contacts.business_function') %>
    <%= name_or_nothing @contact.department %> / <%= @contact.business_function %>
</div>

<div class="control-group">
	<%= show_label_tag t('contacts.phone') %>
  <b><%= @contact.phone %></b>
  <%= @contact.customer.phone %>
</div>

<div class="control-group">
	<%= show_label_tag t('contacts.cell') %>
	<%= @contact.cell %>
</div>

<div class="control-group autoscroll">
	<%= show_label_tag t('contacts.emails') %>
	<%= concat_emails(@contact.emails) %>
</div>