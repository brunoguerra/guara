-# encoding: utf-8
.thumbnail.content-large
  .row.padding-large
    - unless group.name_contains.to_s.empty?
      .span6
        %strong= t("helpers.label.customers.search.names")
        = group.name_contains

    - unless group.business_activities.nil? || group.business_activities.to_s.empty?
      .span6
        %strong= t("customer_pjs.activities")
        = group.business_activities.split(',').map{ |key| Guara::BusinessActivity.find(key).name }.join(', ')

    - unless group.business_segments.to_s.empty?
      .span6
        %strong= t("customer_pjs.segments")
        = group.business_segments.split(',').map{ |key| Guara::BusinessSegment.find(key).name }.join(', ')

    - unless group.employes_min.to_s.empty? || group.employes_max.to_s.empty?
      .span6
        %strong= t("helpers.label.customers.search.employes_count")
        = "#{t("commons.min")}: #{group.employes_min} Ã  #{t("commons.max")}: #{group.employes_max}"

    - unless group.finished_id.to_s.empty?
      .span6
        %strong= t("helpers.label.customers.search.finished_in")
        =group.finished_id

    - unless group.district_contains.to_s.empty?
      .span6
        %strong= t("helpers.label.customers.search.district")
        =group.district_contains

    - unless group.pair_or_odd.nil?
      - if group.pair_or_odd == '1'
        %strong= t("active_crm.scheduled_groups.pair_or_odd")
        = 'Impares'
      - elsif group.pair_or_odd == '2'
        %strong= t("active_crm.scheduled_groups.pair_or_odd")
        = 'Pares'
    - unless group.doc_equals.to_s.empty?
      %strong= t("customers.doc")
      =group.doc_equals