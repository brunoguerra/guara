<section id="active_crm">
    <navbar></navbar>

    <div>
        <div class="row-fluid">
            <ul class="thumbnails">
              <li class="span8">
                <div class="thumbnail">
                  <div class="caption">
                    <div class="page-header">
                      <%=t('active_crm.active_crm_scheculeds.title')%>
                    </div>

                    <table class="table table-bordered table-striped">
                      <thead>
                        <tr>
                          <th><%= t("active_crm.id") %></th>
                          <th><%= t("active_crm.subject") %></th>
                          <th><%= t("active_crm.date_start") %></th>
                          <th><%= t("active_crm.date_finish") %></th>
                          <th><%= t("active_crm.task_type") %></th>
                          <th><%= t("active_crm.user") %></th>
                          <th class="span1"><%= t("helpers.forms.actions") %></th>
                        </tr>
                      </thead>

                      <tbody>
                        <% @active_crm_scheduleds.each do |scheculed| %>
                          <tr>
                            <td><%= scheculed.id  %></td>
                            <td><%= link_to scheculed.subject, scheduled_path(scheculed) %></td>
                            <td><%= !scheculed.date_start.nil? ? scheculed.date_start.strftime("%d/%m/%Y") : ''  %></td>
                            <td><%= !scheculed.date_finish.nil? ? scheculed.date_finish.strftime("%d/%m/%Y") : ''  %></td>
                            <td><%= scheculed.task_type.name  %></td>
                            <td><%= scheculed.user.name  %></td>
                            <td>
                              <%= index_btn_view scheduled_path(scheculed), "Exibir" %>
                              <%= index_btn_edit edit_scheduled_path(scheculed), "Editar" %>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                    <%= will_paginate(@active_crm_scheduleds) %>
                    <%= link_to t('helpers.forms.new'), new_scheduled_path(), :class => "btn" %>
                  </div>
                </div>
              </li>

              <li class="span4">
                <div class="thumbnail">
                  <div class="caption">
                    <%= render :partial => 'form_search' %>
                  </div>
                </div>
              </li>

            </ul>
        </div>    
    </div>
</section>

